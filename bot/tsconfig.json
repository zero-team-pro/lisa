{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "node",
    "allowJs": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["es2020", "dom"],
    "target": "ES2020",
    "types": ["node"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*", "src/loader.js"],
  "exclude": ["node_modules", "dist"]
}
